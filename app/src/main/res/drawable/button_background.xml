<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C0FF33" /> <!-- Lime when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White default color -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#C0FF33"/> <!-- Lime border -->
        </shape>
    </item>
</selector>
