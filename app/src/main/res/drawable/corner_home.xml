<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>  <!-- Rounded corners -->
            <solid android:color="#627C47"/>  <!-- Shadow color (Black with transparency) -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="20dp" android:left="30dp" android:right="30dp" android:bottom="30dp">  <!-- Offset for shadow effect -->
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFFFFF"/>  <!-- Background color (White) -->
        </shape>
    </item>

</layer-list>