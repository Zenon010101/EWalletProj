<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cashInActivity"
    android:background="@drawable/gradient_bg">

    <!-- Logo -->

    <!-- Add Amount Label -->

    <!-- Amount Input -->

    <!-- Choose Bank Label -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="262dp"
        android:layout_height="124dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/palawaganwhitebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/boldonse_regular"
        android:text="Add amount"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <EditText
        android:id="@+id/added_amount"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_amount_text" />

    <TextView
        android:id="@+id/choose_bank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your bank"
        android:fontFamily="@font/boldonse_regular"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/added_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Bank Selection Spinner -->

    <!-- Send Button -->

    <Spinner
        android:id="@+id/bank_selection"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_bank_text" />

    <Button
        android:id="@+id/to_cash_in"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#116850"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bank_selection" />

</androidx.constraintlayout.widget.ConstraintLayout>
