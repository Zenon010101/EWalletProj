<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".billsActivity"
    android:background="@drawable/gradient_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pay Bills"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="670dp"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="160dp"
        android:textAllCaps="true"
        android:fontFamily="@font/boldonse_regular" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Categories"
        android:fontFamily="@font/boldonse_regular"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="230dp"
        android:layout_marginBottom="510dp"
        android:layout_marginTop="150dp" />

    <View
        android:id="@+id/white_background"
        android:layout_width="344dp"
        android:layout_height="500dp"
        app:flow_horizontalAlign="center"
        android:background="@drawable/corner_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Icons layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="300dp">

        <!-- Electric Bill Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/electric_bill"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/electric_bill_icon"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electric Utilities"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10dp" />
        </LinearLayout>

        <!-- Water Bill Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/water_bill"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drop"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
